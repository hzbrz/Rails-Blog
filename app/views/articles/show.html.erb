<h2 align="center" id="header-font-color">
  Title: <%= @article.title[0].capitalize + @article.title[1,@article.title.length] %>
</h2>
<div class="col-sm-8 col-sm-offset-2">
  <ul class="listing">
    <div class="row center">
      <div class="col-sm-4 col-sm-offset-4">
        <li id="header-font-color">Created by:</li>
        <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
        <li class="article-title">
          <%= link_to @article.user.username, user_path(@article.user), { id: "header-font-color" } %>
        </li>
        <li>
          <small id="header-font-color">
            <%= pluralize(@article.user.articles.count, "article") %>
          </small>
        </li>
      </div>
    </div>
  </ul>
  <h4 class="center description"><strong id="header-font-color">Description:</strong></h4>
  <%= simple_format(@article.description, id: "header-font-color") %>
  <div class="article-design">
    <p></p>
  </div>
  <div class="article-view">
    <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
      <%= link_to "Edit this article", edit_article_path(@article), class: 'btn btn-xs btn-link' %>
      <%= link_to "Delete this article", article_path(@article), method: :delete,
                                                  data: { confirm: "Are you sure you want to delete this article?" },
                                                  class: 'btn btn-xs btn-link' %>
    <% end %>
    <%= link_to "View all articles", articles_path, class: 'btn btn-xs btn-link'%>
  </div>
</div>
